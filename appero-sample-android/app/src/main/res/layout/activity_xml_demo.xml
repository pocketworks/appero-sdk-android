<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XML + ComposeView Demo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#E8F5E8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”„ Hybrid Approach Demo"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This Activity demonstrates how XML-based projects can gradually adopt Compose:"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Traditional XML Views with Material Design\nâ€¢ ComposeView integration for modern UI components\nâ€¢ Appero SDK works with both approaches"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Traditional XML Buttons -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F3E5F5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ›ï¸ Traditional XML Views"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Classic Android Views with Material Design components"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnXmlDialog"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="XML Bottom Sheet"
                        android:textSize="12sp"
                        app:backgroundTint="#9C27B0" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="â€¢ Uses showFeedbackDialog() API\nâ€¢ Modal bottom sheet with XML Views\nâ€¢ Perfect for existing XML projects"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ComposeView Integration -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#E3F2FD">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸš€ ComposeView Integration"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modern Compose UI embedded in XML layout"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="12dp" />

                <!-- ComposeView for Appero Feedback UI -->
                <androidx.compose.ui.platform.ComposeView
                    android:id="@+id/composeView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="â€¢ Uses FeedbackPromptUI() Composable\nâ€¢ Modern bottom sheet experience\nâ€¢ Gradual migration path to Compose"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Experience Tracking with XML -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Experience Tracking"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnPositive"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="ðŸ˜Š +1"
                        android:textSize="12sp"
                        android:backgroundTint="#4CAF50" />

                    <Button
                        android:id="@+id/btnNeutral"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        android:text="ðŸ˜ 0"
                        android:textSize="12sp"
                        android:backgroundTint="#FF9800" />

                    <Button
                        android:id="@+id/btnNegative"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="ðŸ˜• -1"
                        android:textSize="12sp"
                        android:backgroundTint="#F44336" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvExperienceState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Experience Points: 0"
                    android:textSize="14sp"
                    android:gravity="center" />

                <!-- Auto-trigger testing button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTestAutoTrigger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="ðŸš€ Test Auto-Trigger (+5 to cross threshold)"
                    android:textSize="12sp"
                    app:backgroundTint="#FF5722" />
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="âš¡ XML Auto-Trigger: ENABLED"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#4CAF50"
                    android:textStyle="bold" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Back to Compose Activity Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackToCompose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="ðŸ”™ Back to Full Compose Demo"
            app:backgroundTint="#2196F3" />

    </LinearLayout>

</ScrollView> 